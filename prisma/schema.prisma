generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String
  password   String
  created_at DateTime? @default(now())
  updated_at DateTime  @updatedAt

  courses     Course[]
  commitments Commitment[]
  profiles    Profile?
  goals       Goal[]

  @@map("Users")
}

model Profile {
  id         String    @id @default(uuid())
  university String?
  period     Int?
  program    String?
  created_at DateTime? @default(now())
  updated_at DateTime  @updatedAt

  user    User   @relation(fields: [user_id], references: [id])
  user_id String @unique

  @@map("Profiles")
}

model Course {
  id         String    @id @default(uuid())
  name       String
  color      String
  teacher    String?
  created_at DateTime? @default(now())
  updated_at DateTime  @updatedAt

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  goals       Goal[]
  commitments Commitment[]
  timers      Timer[]

  @@map("Courses")
}

model Goal {
  id          String    @id @default(uuid())
  name        String
  description String?
  end_date    String
  created_at  DateTime? @default(now())
  updated_at  DateTime  @updatedAt

  course    Course? @relation(fields: [course_id], references: [id])
  course_id String?

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  timers Timer[]

  @@map("Goals")
}

model Commitment {
  id          String    @id @default(uuid())
  name        String
  date        String
  type        String
  description String?
  created_at  DateTime? @default(now())
  updated_at  DateTime  @updatedAt

  course    Course? @relation(fields: [course_id], references: [id])
  course_id String?

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("Commitments")
}

model Timer {
  id               String    @id @default(uuid())
  time             Int
  topic            String
  pages            Int?
  questions        Int?
  correctQuestions Int?
  video            Int?
  revision         Boolean   @default(false)
  created_at       DateTime? @default(now())
  updated_at       DateTime  @updatedAt

  course    Course? @relation(fields: [course_id], references: [id])
  course_id String?

  goal    Goal?   @relation(fields: [goal_id], references: [id])
  goal_id String?

  @@map("Timers")
}
